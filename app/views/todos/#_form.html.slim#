= form_for @todo do |f|
  - if @todo.errors.any?
    #error_explanation
      h2 = "#{pluralize(@todo.errors.count, "error")} prohibited this todo from being saved:"
      ul
        - @todo.errors.full_messages.each do |message|
          li = message
  / - binding.pry
  / .field
  /   = f.label :user
  /   = f.text_field :user
  .field
    = f.label :title
    = f.text_field :title
      | dum
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :done
    = f.check_box :done
  .actions = f.submit
